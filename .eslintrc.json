{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"ignorePatterns": ["dist/**"],
	"rules": {
		"@typescript-eslint/no-namespace": "off",
		"@typescript-eslint/no-explicit-any": "off"
	}
}
